{
  "compilerOptions": {
    "target": "ES2021",                                 
    "module": "commonjs",                               
    "rootDir": "./src",                                 
    "outDir": "./build",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,       
    "strict": true,                                      
     "skipLibCheck": true                           
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "./build/**/*"
  ]
}
